# PREFIX CONFIGURATION
# Remap prefix from 'C-b' to 'C-space'
unbind C-b
set-option -g prefix C-space
bind-key C-space send-prefix

# PANE SPLITTING
# Split panes using | and - (more intuitive)
bind | split-window -h -c "#{pane_current_path}"
bind - split-window -v -c "#{pane_current_path}"
unbind '"'
unbind %

# NAVIGATION
# Vim key-bindings for copy mode
set -g mode-keys vi

# Switch panes using Alt-arrow without prefix
bind -n M-Left select-pane -L
bind -n M-Right select-pane -R
bind -n M-Up select-pane -U
bind -n M-Down select-pane -D

# Vim-style pane switching
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# Resize panes with Vim keys
bind -r H resize-pane -L 5
bind -r J resize-pane -D 5
bind -r K resize-pane -U 5
bind -r L resize-pane -R 5

# WINDOW MANAGEMENT
# Create new windows in current directory
bind c new-window -c "#{pane_current_path}"

# Quick window switching
bind -n M-1 select-window -t 1
bind -n M-2 select-window -t 2
bind -n M-3 select-window -t 3
bind -n M-4 select-window -t 4
bind -n M-5 select-window -t 5

# COPY MODE IMPROVEMENTS
# Copy to system clipboard (Wayland)
bind-key -T copy-mode-vi v send-keys -X begin-selection
bind-key -T copy-mode-vi C-v send-keys -X rectangle-toggle
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "wl-copy"

# CONFIGURATION
# Reload config file
bind r source-file ~/.config/tmux/.tmux.conf \; display-message "Config reloaded!"

# Enable mouse support
set -g mouse on

# Don't rename windows automatically
set-option -g allow-rename off

# Start windows and panes at 1, not 0
set -g base-index 1
set -g pane-base-index 1

# Automatically renumber windows when one is closed
set -g renumber-windows on

# Increase history limit
set -g history-limit 50000

# Reduce escape time for better vim experience
set -sg escape-time 0

# NOTIFICATIONS
set -g visual-activity off
set -g visual-bell off
set -g visual-silence off
setw -g monitor-activity off
set -g bell-action none

# APPEARANCE
# 256 color support
set -g default-terminal "screen-256color"

# Clock mode color
setw -g clock-mode-colour yellow

# Copy mode styling
setw -g mode-style 'fg=black bg=yellow bold'

# Pane borders
set -g pane-border-style 'fg=#444444'
set -g pane-active-border-style 'fg=yellow bold'

# STATUS BAR
set -g status-position bottom
set -g status-justify left
set -g status-style 'fg=white bg=#2e3440'

# Left status (session name)
set -g status-left '#[fg=black,bg=yellow,bold] #S #[bg=#2e3440] '
set -g status-left-length 20

# Right status (removed date/time as requested)
set -g status-right '#[fg=yellow]#{?client_prefix,󰠠 ,}#[fg=white]'
set -g status-right-length 20

# Window status
setw -g window-status-current-style 'fg=black bg=yellow bold'
setw -g window-status-current-format ' #I:#W#{?window_zoomed_flag, 󰍉,} '

setw -g window-status-style 'fg=#81a1c1 bg=#2e3440'
setw -g window-status-format ' #I:#W#{?window_flags,#F,} '

setw -g window-status-bell-style 'fg=yellow bg=red bold'

# Messages
set -g message-style 'fg=yellow bg=#2e3440 bold'
set -g message-command-style 'fg=yellow bg=#2e3440 bold'
